#!/usr/bin/env bash
name='xfce4-session'
release='4'
version='4.20.3'
_version='4.20'
url='https://docs.xfce.org/xfce/xfce4-session/start'
description="Xfce's session manager"
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('GPLv2')
source=("https://archive.xfce.org/src/xfce/xfce4-session/${_version}/xfce4-session-${version}.tar.bz2")
depends=(libxfce4ui libwnck3 xfconf xorg-iceauth labwc)
makedepends=(intltool)
sha256sums=('dbf00672c5316a30b7001fe852e6a5ba9f889afeab8a247545a160d4302f1fa2')
group=(xfce.base)
uses=()
arch=('x86_64')

cd $name-$version

setup(){
    ./configure --prefix=/usr \
        --libdir=/usr/lib64/ \
		--sysconfdir=/etc \
		--localstatedir=/var
}

build(){
    make $jobs
}

package(){
    make install DESTDIR=$DESTDIR $jobs
}


