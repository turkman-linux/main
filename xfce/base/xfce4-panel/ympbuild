#!/usr/bin/env bash
name='xfce4-panel'
release='4'
version='4.20.5'
_version='4.20'
url='https://docs.xfce.org/xfce/xfce4-panel/start'
description='Panel for the Xfce desktop environment'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('GPLv2')
source=("https://archive.xfce.org/src/xfce/xfce4-panel/${_version}/xfce4-panel-${version}.tar.bz2")
depends=(exo garcon  libxfce4ui xfconf libwnck3 cairo libdbusmenu libxfce4windowing)
makedepends=(gobject-introspection intltool vala)
sha256sums=('3f91850c9c467680c8081d561f1a3fd83355c07db07be9a96da1764f8c842b2b')
group=(xfce.base)
uses=()
arch=('x86_64')

cd $name-$version

setup(){
    ./configure --prefix=/usr \
        --libdir=/usr/lib64/ \
		--sysconfdir=/etc \
		--localstatedir=/var
}

build(){
    make $jobs
}

package(){
    make install DESTDIR=$DESTDIR $jobs
}

