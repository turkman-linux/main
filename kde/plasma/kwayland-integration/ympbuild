#!/usr/bin/env bash
name='kwayland-integration'
release='3'
version='6.1.5'
url='https://kde.org/plasma-desktop'
description='KWayland integration'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('GPLv2')
source=("https://download.kde.org/stable/plasma/${version}/kwayland-integration-${version}.tar.xz")
depends=(kwindowsystem kwayland)
makedepends=(extra-cmake-modules wayland-protocols kidletime)
sha256sums=('23c610203f1bfaaccc82718e60adaa333e31dd42837d4e84dff0cf80e614c688')
group=(kde.plasma)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib64 \
		-DBUILD_TESTING=OFF
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}