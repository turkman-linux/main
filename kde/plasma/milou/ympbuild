#!/usr/bin/env bash
name='milou'
release='5'
version='6.4.5'
url='https://kde.org/plasma-desktop'
description='A dedicated search application built on top of Baloo'
email='brkt8khn@gmailmail.com'
maintainer='brkt8khn'
license=('GPLv2')
source=("https://download.kde.org/stable/plasma/${version}/milou-${version}.tar.xz")
depends=(kirigami krunner ksvg libplasma qt6-base qt6-declarative)
makedepends=(extra-cmake-modules kdoctools)
sha256sums=('0eaeec8a05afc3a96f6a0eefc9a045f49ace8be201bc8f57e1ed8133cdaa100d')
group=(kde.plasma)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}
