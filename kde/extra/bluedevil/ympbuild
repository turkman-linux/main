#!/usr/bin/env bash
name='bluedevil'
release='3'
version='6.1.5'
url='https://kde.org/plasma-desktop'
description='Integrate the Bluetooth technology within KDE workspace and applications'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('GPLv2')
source=("https://download.kde.org/stable/plasma/${version}/bluedevil-${version}.tar.xz")
depends=(bluez-qt kdeclarative)
makedepends=(extra-cmake-modules kdoctools kcmutils)
sha256sums=('29958da08b3242bda42438989ee3ecb81d386ca5be72332506e5cf0ded0b7077')
group=(kde.extra)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib64 \
		-DBUILD_TESTING=OFF
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}


