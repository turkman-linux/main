#!/usr/bin/env bash
name='kimageformats'
release='3'
version='6.5.0'
url='https://community.kde.org/Frameworks'
description='Image format plugins for Qt5'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('GPLv3')
source=("https://download.kde.org/stable/frameworks/${version%.*}/kimageformats-${version}.tar.xz")
depends=(qt6-base)
makedepends=(extra-cmake-modules karchive libavif libheif libraw libjxl openexr)
sha256sums=('c64ab736477264f8a0ce4418f0be629ad0f17a078161b2773700d3b96ca75022')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DKIMAGEFORMATS_HEIF=ON

}

build () {
	cmake --build build
}

package () {
    DESTDIR="$DESTDIR" cmake --install build
}

