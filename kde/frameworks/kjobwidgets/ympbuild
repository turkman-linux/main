#!/usr/bin/env bash
name='kjobwidgets'
release='5'
version='6.18.0'
url='https://community.kde.org/Frameworks'
description='Widgets for tracking KJob instances'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/kjobwidgets-${version}.tar.xz")
depends=(kcoreaddons kwidgetsaddons knotifications qt6-base)
makedepends=(extra-cmake-modules qt6-tools doxygen)
sha256sums=('e739ff254c4fa34c0de00aa2d9deee138135d99cd0b46ef5db253c18c02bce98')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_PYTHON_BINDINGS=OFF \
		-DBUILD_QCH=ON 
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}
