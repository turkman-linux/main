#!/usr/bin/env bash
name='kdesu'
release='3'
version='6.5.0'
url='https://community.kde.org/Frameworks'
description='Integration with su for elevated privileges'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/kdesu-${version}.tar.xz")
depends=(qt6-base kpty kconfig)
makedepends=(extra-cmake-modules doxygen qt6-tools)
sha256sums=('03c08d0bbcf71ef122ebe3c97b109092ad9e8719d20d341d8510607bda9ab393')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON 
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}
