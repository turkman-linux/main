#!/usr/bin/env bash
name='kcodecs'
release='3'
version='6.5.0'
url='https://community.kde.org/Frameworks'
description='Provide a collection of methods to manipulate strings using various encodings'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/kcodecs-${version}.tar.xz")
depends=(qt6-base)
makedepends=(extra-cmake-modules doxygen qt6-tools gperf)
sha256sums=('e96c22f5470e39591acdbb01e85203e5d2f179c80b18c2a5991967e16af91e08')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr

}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}

