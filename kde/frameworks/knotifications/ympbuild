#!/usr/bin/env bash
name='knotifications'
release='3'
version='6.5.0'
url='https://community.kde.org/Frameworks'
description='Abstraction for system notifications'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/knotifications-${version}.tar.xz")
depends=(qt6-base libcanberra kconfig)
makedepends=(extra-cmake-modules qt6-tools doxygen qt6-declarative)
sha256sums=('3d73dc682176138cba995b6954eeafdd4507097313f1b2102a4d5ed905a3eee6')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON \
		-DWITH_X11=$(usex X)
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}

