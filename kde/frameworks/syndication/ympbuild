#!/usr/bin/env bash
name='syndication'
release='5'
version='6.18.0'
url='https://community.kde.org/Frameworks'
description='An RSS/Atom parser library'
email='brkt8khn@gmail.com'
maintainer='brkt8khn'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/syndication-${version}.tar.xz")
depends=(kcodecs qt6-base)
makedepends=(extra-cmake-modules doxygen qt6-tools)
sha256sums=('a02f76f8a942285f8a64233fb09f64d28f51eef9e96f4b5dd7d13d4c83933b94')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON 
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}

