#!/usr/bin/env bash
name='cmake'
release='8'
version='4.1.1'
url='https://github.com/Kitware/CMake'
description='A cross-platform open-source make system'
email='aliriza.keskin@pardus.org.tr'
maintainer='aliriza'
license=('GPLv3')
source=("https://github.com/Kitware/CMake/releases/download/v$version/cmake-$version.tar.gz")
depends=()
makedepends=()
sha256sums=('b29f6f19733aa224b7763507a108a427ed48c688e1faf22b29c44e1c30549282')
uses=()
uses_extra=(qt)
group=(dev.util)
arch=('x86_64')

cd $name-$version

setup(){
    ./bootstrap --prefix=/usr \
        --no-system-libs \
        $(use_opt qt --qt-gui --no-qt-gui) \
        --parallel=`nproc`
}

build(){
    make $jobs
}

package(){
    make install $jobs
}

