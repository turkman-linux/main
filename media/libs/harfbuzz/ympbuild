#!/usr/bin/env bash
name='harfbuzz'
release='8'
version='11.3.2'
url='https://github.com/harfbuzz/harfbuzz'
description='HarfBuzz text shaping engine'
email='aliriza.keskin@pardus.org.tr'
maintainer='aliriza'
license=('GPLv3')
source=("https://github.com/harfbuzz/harfbuzz/archive/refs/tags/$version.tar.gz")
depends=(cairo glib icu)
makedepends=(gobject-introspection)
sha256sums=('b6120ebc56238474f4030b2fbcfd235912b6adaf1477c088f4a399a942dd0ab0')
group=(media.libs)
uses=(freetype)
freetype_depends=(freetype)
arch=('x86_64')

cd $name-$version

setup(){
    meson setup build --prefix=/usr \
        --libdir=/usr/lib64/ \
        -Ddocs=disabled \
        -Dgobject=enabled \
        -Dfreetype=$(use_opt freetype enabled disabled)
}

build(){
    ninja -C build
}

package(){
    ninja -C build install
}

